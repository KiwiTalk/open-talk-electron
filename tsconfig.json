{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "ES2020",
    "outDir": "build",
    "moduleResolution": "node",
    "target": "ES2020",
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/node_modules/*"
  ]
}
